pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Ved609/ZeroWaste-Food-Management-System'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t vednmy609/foodwaste:latest .'
                sh 'docker push vednmy609/foodwaste:latest'
            }
        }
        
        stage('Deploy to Kubernetes') {
            steps {
                sh 'kubectl apply -f deployment.yaml'
            }
        }
    }
}
